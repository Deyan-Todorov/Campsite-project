<% include ../partials/header %>
<div class='container'>
    <div class='row'>
<h1>Edit Your User Profile</h1>
<div>
<form action='/users/<%=user.id%>?_method=PUT' method='POST'>
    <div class='form-group'>
        <input class='form-control' type='text' name='user[firstName]' value='<%=user.firstName%>'>
    </div>
    <div class='form-group'>
        <input class='form-control' type='text' name='user[lastName]' value='<%=user.lastName%>'>
    </div>
    <div class='form-group'>
        <input class='form-control' type='text' name='user[email]' value='<%=user.email%>'>
    </div>
    <div class='form-group'>
        <input class='form-control' type='text' name='user[introduction]' value='<%=user.introduction%>'>
    </div>
    </div>
    <div class='form-group'>
    </div>
    <div class='form-group'>
    <button class='btn btn-lg btn-default btn-block'>Submit!</button>
    </div>
</form> 

<a href='/campgrounds'>Go back</a>
</div>
</div>
</div>
