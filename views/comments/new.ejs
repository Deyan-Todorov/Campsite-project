<% include ../partials/header %>

    <div class='container'>
        <div class='row'>
            <div class='col-md-3'></div>
            <div class='col-md-6'>
                <h1 class='align-center'>Add a new comment to <%= campground.name %></h1>
                
                <form action='/campgrounds/<%=campground._id%>/comments' method='POST'>
                    <div class='form-group'>
                        <textarea class="form-control" rows="5" name='comment[text]' placeholder='Comment.'></textarea>
                    </div>
                    <div class='form-group'>
                        <button class='btn btn-md btn-default btn-block'>Submit!</button>
                    </div>
                </form> 
                
                <a href='/campgrounds'>Go back</a>
            </div>
        </div>
    </div>

<% include ../partials/footer %>